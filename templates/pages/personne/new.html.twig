{% extends "base.html.twig" %}

{% block title %}Personne - Nouvelle personne
{% endblock %}

{% block body %}
	<div class="container mt-4">
		 <a href="{{ path('app_personne') }}" class="btn btn-primary">
				Revenir vers la liste des personne
		</a>
		<h1 class="mt-4">Ajout d'une personne</h1>

		{{ form_start(form) }}

		<div class="form-group">
			{{ form_label(form.nom) }}
			{{ form_widget(form.nom) }}
			<div class="form-error">
				{{ form_errors(form.nom) }}
			</div>
		</div>

        <div class="form-group">
			{{ form_label(form.prenom) }}
			{{ form_widget(form.prenom) }}
			<div class="form-error">
				{{ form_errors(form.prenom) }}
			</div>
		</div>

        <div class="form-group">
			{{ form_label(form.datenaissance) }}
			{{ form_widget(form.datenaissance) }}
			<div class="form-error">
				{{ form_errors(form.datenaissance) }}
			</div>
		</div>

        <div class="form-group">
			{{ form_label(form.email) }}
			{{ form_widget(form.email) }}
			<div class="form-error">
				{{ form_errors(form.email) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.motdepasse) }}
			{{ form_widget(form.motdepasse) }}
			<div class="form-error">
				{{ form_errors(form.motdepasse) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_row(form._token) }}
		</div>

		<div class="form-group">
			{{ form_row(form.submit) }}
		</div>

	</div>
	{{ form_end(form) }}
</div>{% endblock %}
